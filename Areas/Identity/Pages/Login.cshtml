@page
@model ezCloth.Areas.Pages.LoginModel
@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.Email">Email Address</label>
                    <input type="text" asp-for="@Model.Input.Email" class="form-control" />
                    <span asp-validation-for="@Model.Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.Password">Password</label>
                    <input type="password" asp-for="@Model.Input.Password" class="form-control" />
                    <span asp-validation-for="@Model.Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>