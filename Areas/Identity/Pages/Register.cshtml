@page
@model ezCloth.Areas.Pages.RegisterModel

@{
}

<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Register</h1>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger">

                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.FirstName">First Name</label>
                    <input type="text" asp-for="@Model.Input.FirstName" class="form-control" />
                    <span asp-validation-for="@Model.Input.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input type="text" asp-for="@Model.Input.LastName" class="form-control" />
                    <span asp-validation-for="@Model.Input.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.Email">Email Address</label>
                    <input type="text" asp-for="@Model.Input.Email" class="form-control" />
                    <span asp-validation-for="@Model.Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.Input.Password">Password</label>
                    <input type="text" asp-for="@Model.Input.Password" class="form-control" />
                    <span asp-validation-for="@Model.Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <select asp-for="@Model.Input.UserRole" class="form-select">
                        <option>--select--</option>
                        <option>Administrator</option>
                        <option>Seller</option>
                        <option>Individual</option>
                    </select>

                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </div>
    </div>

</div>